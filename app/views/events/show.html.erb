<h2><%= @event.name%></h2>
<%= @event.created_at %>

<% if @event.photo.exists? %>
<%= image_tag @event.photo.url(:medium) %>
<% end %>


<p><%= @event.status %></p>

<ul>
<% @event.groups.each do |g| %>
   <li> <%= g.name %> </li>
<% end %>
</ul>

<p><%= @event.category_name %></p>

    <%= simple_format(@event.description)%>
    <%#= @event.location.name %>


<% if false %>
 <!-- helper:simple_format 可將表單換行的文字自動加br斷行
             在html上 -->
<% end %>

